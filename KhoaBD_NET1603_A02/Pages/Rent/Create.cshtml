<div class="">
    <form method="post">
        <div class="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
            <label asp-for="RentingTransaction.RentingTransationId" class="control-label"></label>
            <input asp-for="RentingTransaction.RentingTransationId" class="form-control" />
            <span asp-validation-for="RentingTransaction.RentingTransationId" class="text-danger"></span>
            </div>*@
            @*    <div class="form-group">
            <label asp-for="RentingTransaction.RentingDate" class="control-label"></label>
            <input asp-for="RentingTransaction.RentingDate" class="form-control" />
            <span asp-validation-for="RentingTransaction.RentingDate" class="text-danger"></span>
            </div>*@
            @*  <div class="form-group">
            <label asp-for="RentingTransaction.TotalPrice" class="control-label"></label>
            <input asp-for="RentingTransaction.TotalPrice" class="form-control" />
            <span asp-validation-for="RentingTransaction.TotalPrice" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="RentingTransaction.CustomerId" class="control-label"></label>
                <select asp-for="RentingTransaction.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RentingTransaction.RentingStatus" class="control-label"></label>
                <input asp-for="RentingTransaction.RentingStatus" class="form-control" />
                <span asp-validation-for="RentingTransaction.RentingStatus" class="text-danger"></span>
            </div>
            <input asp-for="RentingTransaction" hidden class="form-control" />
        </div>

        <div class="">
            <table class="table">
                <thead>
                    <tr>
                        <th>Car Name</th>
                        <th>Car NumberOfDoors</th>
                        <th>Car Price</th>
                        <th>SeatingCapacity</th>
                        <th>FuelType</th>
                        <th>StartDate</th>
                        <th>EndDate</th>
                        <th>Selected</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.PickCarDtos.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.PickCarDtos[i].CarName
                                <input asp-for="@Model.PickCarDtos[i].CarName" type="hidden" class="form-control" />
                            </td>
                            <td>
                                @Model.PickCarDtos[i].NumberOfDoors
                                <input asp-for="@Model.PickCarDtos[i].NumberOfDoors" type="hidden" class="form-control" />
                            </td>
                            <td>
                                @Model.PickCarDtos[i].CarRentingPricePerDay
                                <input asp-for="@Model.PickCarDtos[i].CarRentingPricePerDay" type="hidden" class="form-control" />
                            </td>
                            <td>
                                @Model.PickCarDtos[i].SeatingCapacity
                                <input asp-for="@Model.PickCarDtos[i].SeatingCapacity" type="hidden" class="form-control" />
                            </td>
                            <td>
                                @Model.PickCarDtos[i].FuelType
                                <input asp-for="@Model.PickCarDtos[i].FuelType" type="hidden" class="form-control" />
                            </td>
                            <td>
                                <input asp-for="@Model.PickCarDtos[i].StartDate" class="form-control" />
                            </td>
                            <td>
                                <input asp-for="@Model.PickCarDtos[i].EndDate" class="form-control" />
                            </td>
                            <td>
                                <input asp-for="@Model.PickCarDtos[i].IsPicked" />
                                <input asp-for="@Model.PickCarDtos[i].CardId" hidden class="form-control"></input>
                            </td>
                        </tr>
                        @*   <span asp-validation-for="@Model.PickCarDtos[i].StartDate" class="text-danger"></span>
                    <span asp-validation-for="@Model.PickCarDtos[i].EndDate" class="text-danger"></span>*@
                        @*<span asp-validation-for="@Model.PickCarDtos[i].IsPicked"></span>*@
                    }
                </tbody>
            </table>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">
                @Model.ErrorMessage
            </div>
        }

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
